<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Borde blanco -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Color del borde blanco -->
            <corners android:radius="8dp"/> <!-- Bordes redondeados -->
        </shape>
    </item>

    <!-- Fondo naranja -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFA500"/> <!-- Color de fondo naranja -->
            <corners android:radius="8dp"/> <!-- Bordes redondeados -->
        </shape>
    </item>
</layer-list>
